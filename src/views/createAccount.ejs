<%- include('partials/header.ejs') %>

<div class="content-wrapper">
    <div class="login-form">
        <h1 class="login-title">Create Account W.I.P.</h1>

        <form method="POST">
            <input type="text" class="username" name="username" placeholder="Username"> <br>
            <input type="text" class="password" name="password" placeholder="Password"> <br>
               <input type="text" class="first" name="first" placeholder="First name"> <br>
               <input type="text" class="last" name="last" placeholder="Last name"> <br>
            <button class="login-btn">Create</button>
        </form>
      <br>
      
      <% if (typeof message != "undefined"){ %>
          <h3 class="message"><%=message%></h3>
        <% } %>

        <a href="/">
            <p class="create">Login</p>
        </a>
    </div>

</div>

  
<%- include('partials/footer.ejs') %>