<%- include('partials/header.ejs') %>

<div class="content-wrapper">
    <div class="login-form">
        <h1 class="login-title">Create Account W.I.P.</h1>
        <label for="pfp-input"><img id="defaultPfp" src="assets/default_user.png"></label>
        <input type="file" id="pfp-input" name="pfp-upload" accept="image/png, image/jpeg, image/jpg">
      
        <input type="text" class="username" name="username" placeholder="Username"> <br>
        <input type="password" class="password" name="password" placeholder="Password"> <br>
        <input type="text" class="first" name="first" placeholder="First name"> <br>
        <input type="text" class="last" name="last" placeholder="Last name"> <br>
        <button class="login-btn" id="create-button">Create</button>

        <br>
        <h3 class="message" id="server-message"></h3>
        <a href="/"><p class="create">Login</p></a>
    </div>
</div>

